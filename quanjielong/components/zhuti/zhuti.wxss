/* components/zhuti/zhuti.wxss */
.zhuti{
  width: 92%;
  margin:40rpx auto 0 auto;
  background: #f4f4f4;
  border-radius: 15rpx;
  position: relative;
}

.theme{
  font-size: 35rpx;
  width: 96%;
  margin: auto;
  height: 80rpx;
  font-weight: bold;
  color: #7c7c7c;
  border-bottom: 4rpx solid #ccc;
}
.describe{
  font-size: 28rpx;
  width: 96%;
  margin:40rpx auto;
 
}
.tupian-pai{
  display: flex;
  flex-wrap: wrap;
  
}
.paizhao{
  margin:0 0 50rpx 50rpx;
  width: 160rpx;
  height: 160rpx;
  overflow: hidden;
  position: relative; 
}
.gdel{
  width: 30rpx;
  height: 30rpx;
  background: #000;
  opacity: 0.2;
  color: #f0f0f0;
  position: absolute;
  line-height: 28rpx;
  top:0;
  right: 0;
  padding: 5rpx 5rpx 0rpx 0rpx;
  z-index: 999
  }
.paizhao image{width: 100%;height: 100%}
.paizhao video{width: 100%;height: 100%;}
.biaoti{
  margin:5% 5.5% 0 5.5%;
  font-weight: bolder;
  color: #333;
  font-size: 35rpx;
}
.xiongmu{
  display: flex;
  width: 95%;
  height: 75rpx;
  align-items: center;
  justify-content: space-between;
  margin-left: 20rpx;
  font-size: 30rpx;
  padding: 10rpx 0;
  border-top: 2rpx #7c7c7c solid;
}
.onbian{ border-top: 0;}
.btndel{ 
  width: 50rpx;
  height: 50rpx;
  background: rgba(0, 0, 0, 0.4);
  border-radius: 100%;
  text-align: center;
  color: #fff;
  font-size: 45rpx;
  line-height: 50rpx;
  position: absolute;
  top:-23rpx;
  right: -23rpx;
}