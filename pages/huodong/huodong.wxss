/* pages/huodong/huodong.wxss */
page{
  background: #666;
}
/*头部样式*/
.head{
  display: flex;
  width: 94%;
  margin:20rpx auto;
  align-items: center;
  font-size: 28rpx;
  color: #999;
}
.head .user{
  display: flex;
  align-items: center;
  flex: 1;
}
.head .user .u-portrait{
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.head .user .u-name{
  font-size: 34rpx;
}
.head .user .u-time{
  margin-right: 10rpx;
}
.head .s-fen{
  width:60rpx;
  height: 60rpx;
}
/*内容样式*/
.contenter{
  width: 94%;
  margin:20rpx auto 90rpx auto;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}
.content{
  width: 96%;
  margin:20rpx auto;
  
}
.c-zhuti{
  font-size: 36rpx;
  font-weight: bold;
}
.c-nei{
  font-size: 32rpx;
  margin: 5rpx 0 15rpx 0;
  width: 100%
}
.c-map{
  height: 100rpx;
  line-height: 100rpx;
  background-color: pink;
}
.c-imm{
  display: flex;
  margin-left: 10rpx;
}
.c-img{
  width: 160rpx;
  height: 160rpx;
  background: #fff;
  margin-right: 20rpx;
  border: 2rpx solid #999;
}
.c-img image{
  width: 100%;
  height: 100%;
}
.renshu{height: 55rpx; text-align: center;margin:10rpx auto;font-size: 40rpx;}
.c-list{
  display: flex;
  height: 120rpx;
  font-size: 32rpx;
  margin-top: 20rpx;
}
.c-list view{
  flex: 1;
  text-align: center
}
.c-list image{width:45rpx;height: 45rpx;}
.c-item{
  margin: 5rpx 0 5rpx 0;
}
.c-item text{
  margin-right: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.c-item text:nth-child(2){
  color: red;
}
button{
  height: 100rpx
}