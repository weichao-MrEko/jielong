  font-size: 20rpx;
  text-align: center;
  line-height: 30rpx;
}

.down {
  width: 160rpx;
  height: 160rpx;
  margin: auto;
  border: 8rpx solid #f34534;
  border-radius: 100%;
  line-height: 150rpx;
  color: #f34534;
  font-size: 30rpx;
  padding: 0;
}

