<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
</view>

<view class='shuju'>
  <view><span>0</span>人看过</view>
  <view>余额￥<span>0</span></view>
  <view bindtap='jielong'><image class='jiapush' src='../img/fabujl.jpg'></image></view>
  </view>
  <view class='nav'>
    <view><image src='../img/sousuo.jpg'></image><text>搜索</text> </view>
   <view><image src='../img/mede.jpg'></image><text>我的</text> </view>
   <view><image src='../img/i.jpg'></image> <text>我</text></view>
   <view><image src='../img/quanzi.jpg'></image><text>圈子</text> </view>
  </view>
  <view class='touxiang' wx:for='{{zhuti}}' bindtap='jieneiyong' data-id='{{index}}'>
      <view class='tou'>
          <view class='tou-pian'>
              <image  class="as-avatar" src="{{item.user_img}}"      
                background-size="cover"></image>
              <view class="as-nickname">{{item.user_name}}</view>
              <view class='as-time'>{{item.add_time}}</view>
          </view>
          <view class='tou-jian'>ˇ</view>
      </view>

      <view class='tou-con'>
          <view class='tou-jiaoy'>{{item.theme_name}}
          <text  style='color:red' wx:if='{{item.btw_price != 0.00}}'>￥{{item.btw_price}}</text>
          <view class='tubox'>
          <view wx:for='{{item.theme_img}}' class='tupian'>
          <image  src="http://192.168.1.112/dragon/public{{item.img_path}}"   mode='aspectFill'></image>
       
          </view>
          </view>
          </view>
      
      <view class='tou-con-o'>
      <view class='tou-con-o-left'>{{item.xmu[index].item_name}}</view>
      <view class='tou-con-o-right'>{{item.xmu[index].amounta}}</view>
      </view>

      <view class='tou-con-o'>
      <view class='tou-con-o-left'>{{item.kangou}}</view>
      <view class='tou-con-o-right zhuangt'>{{item.zhuangtai}}</view>
      </view>

  </view>
</view>
   
 
   
   
<view class='font'>有限传播，圈子工具</view>
</view>
