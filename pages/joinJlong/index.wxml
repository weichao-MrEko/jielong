<view class='contain'>
    <view hidden='{{hid}}'>
        <view  class="onebox bg" bindtap='adr' wx:if='{{adr_panduan}}'>
              <image class='one_img' src='../img/bule_map.png'></image>
              <view class='one_v1' wx:if='{{address}}'>
                    <view >收货人：{{address.name}}，{{address.phone}}</view>
                    <view class='one_v2'>{{address.area}}{{address.address}}</view>
              </view>
              <view class='one_v1' wx:else>请填入收货人信息</view>
              <image class='one_img2' src='../img/icon_jl.png'></image>
        </view>
        <view wx:if='{{self_info.id}}'>
          <input wx:for='{{self_info}}' wx:key="unique" class='twosty bg' type='text' placeholder='{{self_info.name}}' value='{{self_info.value}}' bindinput='binddata'></input>
        </view>
       
        <view class='two_v1' style=""> 
              <view class='two_v1_v1'>请选择您的接龙</view>
              <view class='two_v1_v2' wx:for='{{item_info}}'>
                    <view class='two_v1_v2_v1'>{{item.item_name}}</view>
                    <view class='twobox'>
                          <view class='tb_v1'>￥{{item.price}}</view>
                          <view class='tb_v2'>
                          <view class="{{color == true ? 'tb_v3' : 'tb_v5'}}" bindtap='reduce' data-id='{{index}}'>-</view>
                          <view class='tb_v4'>{{item.may_amount}}</view>
                          <view bindtap='add' class='tb_v5' data-id='{{index}}'>+</view>
                          </view>
                    </view>
              </view>
              
        </view>

        <view class='three'>
              <view class='three_v1'
              wx:for='{{item_info}}'
              wx:if='{{item.may_amount !==0}}'
               bindtop="{{num<=0?'changcolor1':'changcolor2'}}">
              {{item.item_name}}+{{item.may_amount}}</view>
              <view class='twobox'>
                    <view class='three_v2_v1' >
                    已选{{summation.zongshu}}件：<span>￥{{summation.jiage}}</span></view>
                    <view class='three_v2_v2' bindtap='tesu'><image  src="../img/bi.png"></image>填写备注</view>
              </view>
              <view class='bg three_v3'hidden='{{tesu}}'>
                    <input class='bg totop'  type='text' placeholder='这里填写你的特殊要求！'></input>
              </view>
        </view>
    </view>
</view>
    <view hidden='{{hid2}}' class='foot'>
    <span>马上支付￥</span>
    </view>