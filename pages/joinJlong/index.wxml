
<view class='contain'>
    <view hidden='{{hid}}'>
        <view  class="onebox bg" bindtap='adr' wx:if='{{address_info.id}}'>
              <image class='one_img' src='../img/bule_map.png'></image>
              <view class='one_v1'>
                    <view >收货人：{{address_info.name}}，{{address_info.phone}}</view>
                    <view class='one_v2'>{{address_info.area}}{{address_info.address}}</view>
              </view>
              <image class='one_img2' src='../img/icon_jl.png'></image>
        </view>
        <view wx:if='{{self_info.id}}'>
          <input wx:for='{{self_info}}' wx:key="unique" class='twosty bg' type='text' placeholder='{{self_info.name}}' value='{{self_info.value}}' bindinput='binddata'></input>
        </view>
        <view class='two_v1' style=""> 
              <view class='two_v1_v1'>请选择您的接龙</view>
              <view class='two_v1_v2' wx:for='{{item_info}}'>
                    <view class='two_v1_v2_v1'>{{item.item_name}}</view>
                    <view class='twobox'>
                          <view class='tb_v1'>￥{{item.price}}</view>
                          <view class='tb_v2'>
                          <view class="{{color == true ? 'tb_v3' : 'tb_v5'}}" bindtap='reduce'>-</view>
                          <view class='tb_v4'>{{num}}</view>
                          <view bindtap='add' class='tb_v5'>+</view>
                          </view>
                    </view>
              </view>
              
        </view>

        <view class='three'>
              <view class='three_v1' bindtop="{{num<=0?'changcolor1':'changcolor2'}}">周末聚会+{{num}}</view>
              <view class='twobox'>
                    <view class='three_v2_v1'>已选1件：<span>￥</span></view>
                    <view class='three_v2_v2' bindtap='tesu'><image  src="../img/bi.png"></image>填写备注</view>
              </view>
              <view class='bg three_v3'hidden='{{tesu}}'>
                    <input class='bg totop'  type='text' placeholder='这里填写你的特殊要求！'></input>
              </view>
        </view>
    </view>
     <view>
          <view hidden='{{ad}}' class='address' bindtap='ad2'>       
              <view>车陂村</view>
              <view class='ad_v2'>广东省</view>
          </view>
          <view class='ad2' hidden='{{ad2}}'>
              <view>
                   <text>收货人</text><input placeholder='姓名'></input>
              </view>
              <view>
                   <text>手机号码</text><input placeholder='11位手机号码'></input>
              </view>
              <view>
                   <text>地区信息</text><input placeholder='地区信息'></input>
              </view>
              <view>
                   <text>详细地址</text><input placeholder='街道门牌信息'></input><image class='ad2_img' src="../img/icon_map.png"></image>
              </view>
              <view>
                   <text>邮政编码</text><input placeholder='邮政编码'></input>
              </view>
          </view>
    </view>
</view>
    <view hidden='{{hid2}}' class='foot'>
    <span>马上支付￥</span>
    </view>