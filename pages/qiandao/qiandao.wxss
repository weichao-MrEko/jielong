.qiandao_head{
  width: 94%;
  margin: auto;
  display: flex;
  align-items: center;
}
.head_box{
  width: 100%;
  display: flex;
}
.head_xingx{
  display: flex;
  font-size: 32rpx;
  margin: 10rpx 0;
}
.flex{
  flex: 1;
}
.head_con{
  flex: 3;
  margin: 10rpx 0;
}
.erweima_box{
 flex: 0.4;
 color: #f34534;
 text-align: center;
 font-size: 25rpx;
}
.erweima{

  margin:10rpx auto;
  width: 60rpx;
  height: 60rpx;
}
image{
  width: 100%;
  height: 100%;
}
.head_item{
  display: flex;
  margin: 5rpx 0;
}
.head_title{
