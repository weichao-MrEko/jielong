  background: #f4f4f4;
}
.content_box{
  border-bottom: #eee solid 1rpx;
  overflow: hidden;
  margin-left: 20rpx;
}
.items{
  font-size: 35rpx;
  font-weight: bold;
}
.content{
  display: flex;
  width: 96%;
  margin: auto;
}
.content_nei view{
 margin: 10rpx 0;
}
.nei_user{
  display: flex;
  margin: 10rpx 0;
}
.time{
  font-size: 32rpx;
