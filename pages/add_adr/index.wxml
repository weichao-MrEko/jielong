          <view class='ad2'>
              <view>
                   <text>收货人</text><input bindinput='nameInput' placeholder='姓名'></input>
              </view>
              <view>
                   <text>手机号码</text><input placeholder='11位手机号码' bindinput='mobileInput'></input>
              </view>
              <view>
                   <text>地区信息</text><input bindinput='areaInput' placeholder='地区信息'></input>
              </view>
              <view>
                   <text>详细地址</text><input bindinput='addressInput' placeholder='街道门牌信息'></input><image class='ad2_img' src="../img/icon_map.png"></image>
              </view>
              <view>
                   <text>邮政编码</text><input bindinput='codeInput' placeholder='邮政编码'></input>
              </view>
              <button class='btn' type='primary' bindtap='add_adr'>提交地址</button>
          </view>
