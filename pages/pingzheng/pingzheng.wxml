<view class='head'>
  <view wx:for='{{head}}' class='{{index==curindex ?"cur":""}}' data-id='{{index}}' bindtap='head'>{{item}}</view>
</view>
<!--已参与界面-->
<view class='canyu_box' hidden='{{curindex!==0}}' wx:for="{{pzAllInfo}}" wx:for-index='oi'>
  <view class='cnayu_name' bindtap='jump' data-id='{{index}}'>{{item.theme_name}}</view>
  <view>活动类型:{{jl_type[item.jl_type]}}</view>
  <view class='pz_head'>接龙序号:
    <view class='pz_xh'>{{item.may_amount}}</view>
  </view>
  <view class='pz_content-1'>
    <view class='pz_content-2'>活动内容:</view>
    <view class='pz_content-3'>{{item.desc_info}}</view>
  </view>
  <view wx:for="{{item.address}}"  bindtap='map' data-id='{{oi}}'>
      <view wx:if='{{item.address}}'>
        位置:
        <view class='pz_img'>
          <image src='../img/icon_map.png'></image>
        </view>
        {{item.address}}
      </view>
  </view>
  
</view>

<!-- 待支付页面 -->
<view hidden='{{curindex!==1}}' class='canyu_box' wx:for="{{pzNotPay}}">
  <view class='cnayu_name' bindtap='jump' data-id='{{index}}'>{{item.theme_name}}</view>
  <view class='pz_hdtype'>活动类型:<view class='pz_hdtype_1'>{{jl_type[item.jl_type]}}</view></view>
  <view class='pz_head'>接龙序号:
    <view class='pz_xh'>{{item.amount}}</view>
  </view>
  <view wx:for="{{item.address}}" class='pz_content-1'>
    <view class='pz_content-2'>活动地点:</view>
    <view class='pz_content-3'>{{item.address}}
    </view>
  </view>
  <view>待支付金额:{{item.price}}</view>
  <view class='pz_p'>
    <view class='pz_pay'>去支付</view>
  </view>
</view>

<!-- 已完成界面 -->
<view hidden='{{curindex!==2}}' class='canyu_box'>
  <view class='cnayu_name'></view>
  <view class='pz_head'>接龙序号:
    <view class='pz_xh'></view>
  </view>
  <view>项目</view>
  <view>活动地点</view>

</view>