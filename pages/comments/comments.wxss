/* pages/comments/comments.wxss */

page {
  background: #ccc;
}

image {
  width: 100%;
  height: 100%;
}

/* 整体样式 */

.all {
  width: 100%;
  background-color: #fff;
  border-top: 1px solid #ccc;
}

.content {
  display: flex;
  padding: 10rpx;
  justify-content: space-between;
}

.zhongjian {
  flex: 5;
}

.zhongjian view {
  margin: 10rpx 0;
}

.foot {
  flex: 2;
  position: relative;
}

.foot_1 {
  position: absolute;
  bottom: 10rpx;
  right: 25rpx;
}

.user_img {
  flex: 1;
}

.user_img view {
  margin: 15rpx;
  width: 80rpx;
  height: 80rpx;
}

.name {
  font-size: 30rpx;
}

.comment {
  font-size: 30rpx;
  color: #ccc;
}

.add_time {
  font-size: 22rpx;
  color: #ccc;
}
.foot{
  font-size: 25rpx;
  color: #ccc;
}